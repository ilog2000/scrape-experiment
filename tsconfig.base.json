{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2016",

    /* Modules */
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,

    /* Emit */
    "removeComments": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": false,

    /* Completeness */
    "skipLibCheck": true,
  },
  "exclude": ["node_modules", "dist/**/*"]
}
